<?php
session_start();
date_default_timezone_set('America/Argentina/Buenos_Aires');

function e($s){ return htmlspecialchars((string)$s, ENT_QUOTES, 'UTF-8'); }

$dbFile = __DIR__ . '/save_the_rave.sqlite';
try {
    $pdo = new PDO('sqlite:' . $dbFile);
    $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
} catch (Throwable $ex) {
    http_response_code(500);
    echo "Error DB: " . e($ex->getMessage());
    exit;
}

// Logout
if (isset($_GET['logout'])) {
    $_SESSION = [];
    if (ini_get("session.use_cookies")) {
        $params = session_get_cookie_params();
        setcookie(session_name(), '', time() - 42000,
            $params["path"], $params["domain"], $params["secure"], $params["httponly"]
        );
    }
    session_destroy();
    header("Location: login.php");
    exit;
}

$error = '';
$isLogged = !empty($_SESSION['usuario']);

if (!$isLogged && $_SERVER['REQUEST_METHOD'] === 'POST') {
    $u = isset($_POST['user']) ? trim($_POST['user']) : '';
    $p = isset($_POST['pass']) ? (string)$_POST['pass'] : '';

    if ($u === '' || $p === '') {
        $error = "Faltan credenciales.";
    } else {
        $stmt = $pdo->prepare("
            SELECT id, username, password, tipo_global, rol_evento, activo
            FROM usuarios_admin
            WHERE username = :u
            LIMIT 1
        ");
        $stmt->execute([':u'=>$u]);
        $row = $stmt->fetch(PDO::FETCH_ASSOC);

        if (!$row || (int)$row['activo'] !== 1) {
            $error = "Usuario no encontrado o inactivo.";
        } elseif ($row['password'] !== $p) {
            $error = "Contraseña incorrecta.";
        } else {
            // ✅ Login OK
            // ###DEBUG_SCREEN###
            if (isset($_GET['debug']) && $_GET['debug'] == '1') {
                echo '<pre style="background:#111;color:#0f0;padding:10px">';
                echo "DEBUG LOGIN OK\n";
                echo "user=\n";
                echo "tipo_global=\n";
                echo "rol_evento=\n";
                echo "(si es staff_evento+puerta deberia ir a puerta.php)\n";
                echo '</pre>';
                exit;
            }
            @file_put_contents('/tmp/login_debug.log', date('c')." LOGIN OK user= tipo= rol=\n", FILE_APPEND);
            $_SESSION['usuario']     = $row['username'];
            $_SESSION['user_id']     = (int)$row['id'];
            $_SESSION['tipo_global'] = $row['tipo_global'];
            $_SESSION['rol_evento']  = $row['rol_evento'];

            // Redirect por template / rol
            if ($row['tipo_global'] === 'super_admin') {
                @file_put_contents('/tmp/login_debug.log', date('c')." REDIRECT superadmin.php\n", FILE_APPEND);
                header("Location: superadmin.php");
                exit;
            }

            if ($row['tipo_global'] === 'admin_evento') {
                @file_put_contents('/tmp/login_debug.log', date('c')." REDIRECT panel_admin.php\n", FILE_APPEND);
                header("Location: panel_admin.php");
                exit;
            }

            if ($row['tipo_global'] === 'staff_evento') {
                // por ahora solo plantilla puerta
                if ($row['rol_evento'] === 'puerta') {
                    @file_put_contents('/tmp/login_debug.log', date('c')." REDIRECT puerta.php\n", FILE_APPEND);
                    header("Location: puerta.php");
                    exit;
                }
                // futuro: otros templates
                @file_put_contents('/tmp/login_debug.log', date('c')." REDIRECT panel_admin.php\n", FILE_APPEND);
                header("Location: panel_admin.php");
                exit;
            }

            // fallback
            @file_put_contents('/tmp/login_debug.log', date('c')." REDIRECT panel_admin.php\n", FILE_APPEND);
                header("Location: panel_admin.php");
            exit;
        }
    }
}

// Si ya está logueado, mandar al lugar correcto sin mostrar login
if ($isLogged) {
    $tg = isset($_SESSION['tipo_global']) ? $_SESSION['tipo_global'] : '';
    $re = isset($_SESSION['rol_evento']) ? $_SESSION['rol_evento'] : '';

    if ($tg === 'super_admin') { @file_put_contents('/tmp/login_debug.log', date('c')." REDIRECT superadmin.php\n", FILE_APPEND);
                header("Location: superadmin.php"); exit; }
    if ($tg === 'admin_evento') { @file_put_contents('/tmp/login_debug.log', date('c')." REDIRECT panel_admin.php\n", FILE_APPEND);
                header("Location: panel_admin.php"); exit; }
    if ($tg === 'staff_evento' && $re === 'puerta') { @file_put_contents('/tmp/login_debug.log', date('c')." REDIRECT puerta.php\n", FILE_APPEND);
                    header("Location: puerta.php"); exit; }

    @file_put_contents('/tmp/login_debug.log', date('c')." REDIRECT panel_admin.php\n", FILE_APPEND);
                header("Location: panel_admin.php"); exit;
}

?>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Login Admin - TICKEX</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    *{box-sizing:border-box;margin:0;padding:0;}
    body{
      font-family:system-ui,-apple-system,BlinkMacSystemFont,"Segoe UI",sans-serif;
      background:#0b0b0b;color:#f5f5f5;min-height:100vh;
      display:flex;align-items:center;justify-content:center;padding:20px;
    }
    .card{
      width:100%;max-width:420px;background:#151515;border-radius:16px;
      padding:24px;box-shadow:0 18px 35px rgba(0,0,0,.6);
    }
    h1{font-size:1.25rem;margin-bottom:10px;text-align:center;}
    p.sub{font-size:.9rem;color:#aaa;margin-bottom:18px;text-align:center;}
    .field{margin-bottom:14px;}
    label{display:block;font-size:.85rem;margin-bottom:4px;color:#ccc;}
    input{
      width:100%;padding:9px 10px;border-radius:10px;border:1px solid #333;
      background:#111;color:#f5f5f5;font-size:.9rem;
    }
    button{
      width:100%;margin-top:8px;padding:10px 0;border:none;border-radius:999px;
      background:#d71d24;color:white;font-weight:600;font-size:.95rem;cursor:pointer;
    }
    button:hover{filter:brightness(1.08);}
    .error{
      margin-top:10px;padding:8px 10px;border-radius:8px;background:#3a1114;
      color:#ffb3b3;font-size:.85rem;
    }
  </style>
</head>
<body>
  <div class="card">
    <h1>Login Administradores</h1>
    <p class="sub">Ingresá tus credenciales para acceder al panel correspondiente.</p>

    <form method="post">
      <div class="field">
        <label for="user">Usuario</label>
        <input id="user" name="user" autocomplete="off" required>
      </div>

      <div class="field">
        <laber="pass">Contraseña</label>
        <input id="pass" type="password" name="pass" autocomplete="off" required>
      </div>

      <button type="submit">Entrar</button>

      <?php if ($error): ?>
        <div class="error"><?php echo e($error); ?></div>
      <?php endif; ?>
    </form>
  </div>
</body>
</html>
